<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#3300BCD4">

    <!-- Main Screen Title with Elevated Style -->
    <TextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the Main Screen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="24dp"
        android:elevation="6dp"
        android:letterSpacing="0.1"
        android:shadowColor="#66000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Ego Switch with Icon -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchEgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ego"
        app:switchPadding="15dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="15dp"
        android:textSize="18sp"
        android:textColor="?android:textColorPrimary"
        android:checked="true"
        android:thumbTint="?attr/colorAccent"
        android:trackTint="@color/colorAccentVariant"
        android:layout_marginBottom="24dp"
        android:iconTint="?attr/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:elevation="4dp" />

    <!-- Divider for Better Separation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimaryVariant"
        android:layout_marginVertical="16dp" />

    <!-- Switches Group with Rounded Corners and Gradient Background -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_background"
        android:padding="70dp"
        android:elevation="4dp">

        <!-- Switch 1 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_happy"
            android:drawablePadding="15dp"
            android:text="Happy "
            android:textSize="16sp"
            app:switchPadding="15dp"
            android:textColor="?android:textColorPrimary"
            android:enabled="false"
            android:thumbTint="?attr/colorAccent"
            android:trackTint="@color/colorAccentVariant"
            android:layout_marginBottom="12dp" />

        <!-- Switch 2 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money "
            android:textSize="16sp"
            android:drawablePadding="15dp"
            app:switchPadding="15dp"
            android:drawableStart="@drawable/ic_money"
            android:textColor="?android:textColorPrimary"
            android:enabled="false"
            android:thumbTint="?attr/colorAccent"
            android:trackTint="@color/colorAccentVariant"
            android:layout_marginBottom="12dp" />

        <!-- Switch 3 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_peace"
            android:text="Peace "
            android:textSize="16sp"
            app:switchPadding="15dp"
            android:drawablePadding="15dp"
            android:textColor="?android:textColorPrimary"
            android:enabled="false"
            android:thumbTint="?attr/colorAccent"
            android:trackTint="@color/colorAccentVariant"
            android:layout_marginBottom="12dp" />

        <!-- Switch 4 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_friend"
            android:drawablePadding="15dp"
            android:text="Friend "
            android:textSize="16sp"
            app:switchPadding="15dp"
            android:textColor="?android:textColorPrimary"
            android:enabled="false"
            android:thumbTint="?attr/colorAccent"
            android:trackTint="@color/colorAccentVariant"
            android:layout_marginBottom="12dp" />

        <!-- Switch 5 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_evolution"
            android:drawablePadding="15dp"
            android:text="Evolution "
            android:textSize="16sp"
            app:switchPadding="15dp"

            android:textColor="?android:textColorPrimary"
            android:enabled="false"
            android:thumbTint="?attr/colorAccent"
            android:trackTint="@color/colorAccentVariant"
            android:layout_marginBottom="12dp" />
    </LinearLayout>
</LinearLayout>
